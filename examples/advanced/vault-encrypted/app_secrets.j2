# Application Secrets
# This file is generated from Ansible template

SECRET_KEY={{ app_secret_key }}
DEBUG=false
ALLOWED_HOSTS={{ ansible_hostname }},{{ ansible_default_ipv4.address }}

# Database
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}/{{ db_name }}

# External API
API_KEY={{ api_key }}
API_SECRET={{ api_secret }}
API_ENDPOINT={{ api_endpoint }}
